{
  "name": "uuf6429/phpstan-inconsistent-baseline-poc",
  "type": "project",
  "authors": [
    {
      "name": "Christian Sciberras",
      "email": "christian@sciberras.me"
    }
  ],
  "require": {
    "php": "^7 || ^8",
    "ext-json": "*",
    "ext-curl": "*",
    "phpstan/phpstan": "^2.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "scripts": {
    "dev": "php -S localhost:8000 index.php",
    "lint": [
      "Composer\\Config::disableProcessTimeout",
      "php -dphar.readonly=0 phpstan clear-result-cache",
      "php -dphar.readonly=0 phpstan --no-progress --no-ansi --error-format=raw -vvv --debug analyse"
    ],
    "baseline": [
      "Composer\\Config::disableProcessTimeout",
      "echo > phpstan-baseline.neon",
      "php -dphar.readonly=0 phpstan clear-result-cache",
      "php -dphar.readonly=0 phpstan --no-progress --generate-baseline --allow-empty-baseline analyse"
    ]
  }
}
